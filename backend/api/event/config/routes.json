{
  "routes": [
    {
      "method": "GET",
      "path": "/events/:uuid",
      "handler": "event.findOne",
      "config": {
        "policies": ["plugins::users-permissions.ratelimit"]
      }
    },
    {
      "method": "POST",
      "path": "/events",
      "handler": "event.create",
      "config": {
        "policies": ["plugins::users-permissions.ratelimit"]
      }
    },
    {
      "method": "PUT",
      "path": "/events/:uuid",
      "handler": "event.update",
      "config": {
        "policies": ["plugins::users-permissions.ratelimit"]
      }
    }
  ]
}
